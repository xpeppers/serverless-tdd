{
  "name": "serverless-tdd",
  "version": "1.2.0",
  "description": "Serverless TDD example",
  "author": "XPeppers",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/xpeppers/serverless-tdd"
  },
  "dependencies": {
    "serverless-offline": "3.16.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "mocha": "3.5.3",
    "sinon": "3.3.0",
    "supertest": "3.0.0"
  },
  "scripts": {
    "start": "sls offline start -s development -o 0.0.0.0 > serverless.log 2>&1 &",
    "stop": "pkill node || true",
    "test": "mocha test test/unit/** test/integration/**",
    "test:local-acceptance": "sls offline start --exec 'mocha test test/acceptance/**'",
    "test:acceptance": "mocha test test/acceptance/**",
    "deploy": "env $(cat .env | xargs) sls deploy",
    "info": "env $(cat .env | xargs) sls info"
  }
}
